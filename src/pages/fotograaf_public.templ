package pages

type FotograafData struct {
	ProfileImageBase64 string
	Name               string
	Email              string
	Bio                string
	Portfolio          []string
}

templ FotograafPublic(data FotograafData) {
	<main class="min-h-screen bg-[#070707]">
		<header class="border-b border-zinc-800">
			<div class="flex items-center justify-between py-6 px-8">
				<a href="/overview" class="text-xs md:text-sm font-medium tracking-[0.2em] uppercase text-zinc-400 hover:text-white transition-colors">
					‚Üê Terug
				</a>
				<span class="font-['Syne'] font-bold uppercase tracking-tighter text-2xl md:text-3xl text-white">Grafisch</span>
				<span class="text-xs md:text-sm font-medium tracking-[0.2em] uppercase text-zinc-500">Fotograaf</span>
			</div>
		</header>

		<div class="grid grid-cols-1 lg:grid-cols-2">
			<div class="border-r border-zinc-800">
				<div class="aspect-[3/4] w-full overflow-hidden bg-[#0b0b0b]">
					if data.ProfileImageBase64 != "" {
						<img 
							src={ "data:;base64," + data.ProfileImageBase64 } 
							alt={ data.Name } 
							class="w-full h-full object-cover"
						/>
					} else {
						<div class="w-full h-full flex items-end p-12">
							<span class="text-zinc-500 text-[20rem] font-black uppercase opacity-10 leading-none">{ string(data.Name[0]) }</span>
						</div>
					}
				</div>
			</div>

			<div class="flex flex-col">
				<div class="border-b border-zinc-800 p-8">
					<h1 class="text-5xl md:text-6xl font-black text-white uppercase tracking-tighter">{ data.Name }</h1>
					<p class="text-zinc-500 uppercase tracking-wider mt-2">Fotograaf</p>
				</div>

				<div class="border-b border-zinc-800 p-8">
					<h2 class="text-zinc-500 uppercase tracking-wider text-xs mb-4">Contact</h2>
					<p class="text-white uppercase tracking-wide">{ data.Email }</p>
				</div>

				if data.Bio != "" {
					<div class="p-8 flex-1">
						<h2 class="text-zinc-500 uppercase tracking-wider text-xs mb-4">Over</h2>
						<p class="text-white leading-relaxed">{ data.Bio }</p>
					</div>
				}
			</div>
		</div>

		if len(data.Portfolio) > 0 {
			<div class="border-t border-zinc-800">
				<div class="p-8 border-b border-zinc-800">
					<h2 class="text-zinc-500 uppercase tracking-wider text-xs">Portfolio</h2>
				</div>
				<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
					for _, img := range data.Portfolio {
						<div class="aspect-[3/4] border-r border-b border-zinc-800 overflow-hidden bg-[#0b0b0b]">
							if img != "" {
								<img src={ img } alt="Portfolio" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"/>
							}
						</div>
					}
				</div>
			</div>
		}
	</main>
}
